# GigaChat API Credentials (обязательно)
GIGACHAT_API_KEY=ваш_api_ключ_здесь
GIGACHAT_CLIENT_ID=ваш_client_id
GIGACHAT_SCOPE=GIGACHAT_API_PERS

# Настройки модели
GIGACHAT_MODEL=GigaChat-Lite
GIGACHAT_TEMPERATURE=0.2
GIGACHAT_TOP_P=1

# Telegram Bot (для бота)
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# Langfuse Tracing (опционально для мониторинга LLM)
# Получить ключи: https://cloud.langfuse.com → Settings → API Keys
LANGFUSE_SECRET_KEY=sk-lf-...
LANGFUSE_PUBLIC_KEY=pk-lf-...
LANGFUSE_HOST=https://cloud.langfuse.com

# Отладка (опционально)
DEBUG_TOKENS=false